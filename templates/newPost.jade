extends base.jade
block content
  .newpost
    form.form-group(action="add", method="post")
      |Title
      br
      input.form-control(type="text", name="title", placeholder="Enter your title here", class="input-block-level")
      br
      br
      |Content
      br
      textarea.form-control(name="content", cols="100", rows="10")
      br
      input.btn.btn-default(type="submit", value="Publish")
